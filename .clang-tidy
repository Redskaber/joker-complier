Checks: >
  -*,
  clang-analyzer-*,
  readability-*,
  modernize-use-using,
  bugprone-*
WarningsAsErrors: "*"
HeaderFilterRegex: ".*"
AnalyzeTemporaryDtors: true
CheckOptions:
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: clang-tidy.ignore-compiler-options
    value: "-fplugin=.*"
